@model IEnumerable<MyRecipes.Models.Category>

@{
    var selectedCategories = ViewBag.SelectedCategories as int[] ?? new int[] { };
}

<div class="sidebar">
    <h3>Filter by Category</h3>
    <form method="get" asp-action="Index">
        @if (Model != null)
        {
            foreach (var category in Model)
            {
                <div>
                    <input type="checkbox" name="categories" value="@category.Id" id="category_@category.Id"
                    @(selectedCategories.Contains(category.Id) ? "checked" : "") />
                    <label for="category_@category.Id">@category.CategoryName</label>
                </div>
            }
        }
        else
        {
            <p>No categories available</p>
        }
        <button type="submit" class="btn btn-primary mt-2">Filter</button>
    </form>
</div>
