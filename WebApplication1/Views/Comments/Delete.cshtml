@model MyRecipes.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommentBody)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Dishes" asp-route-id="@Model.DishId">Back to Recipe</a>
    </form>
</div>
